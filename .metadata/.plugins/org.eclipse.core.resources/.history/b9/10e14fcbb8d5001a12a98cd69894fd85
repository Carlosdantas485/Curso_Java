
public class main {

	public static void main(String[] args) {

		String nome = " Carlos Alberto Dantas Filho ";
			
			String convetLow = nome.toLowerCase();
			System.out.println(convetLow);
			//letras maiusculas
			
			String convetUpper = nome.toUpperCase();
			System.out.println(convetUpper);
			//letras minuscuas
			
			String convetTrim = nome.trim();
			System.out.println(convetTrim);
			//tira os espacos no inicio e no fim da frase
			
			String convetSubstring = nome.substring(2);
			System.out.println(convetSubstring);
			//ira mostar apenas as letras seguintes a posicao 2
			
			String convetSubstring2 = nome.substring(2, 9);
			System.out.println(convetSubstring2);
			//ira mostar apenas as letras seguintes a posicao 2 ate a posicao 9
		
			String convetReplace = nome.replace('a', '?');
			System.out.println(convetReplace);
			//troca todas as letras ( a ) por ( ? )
		
			String convetReplace2 = nome.replace("ar", '?!');
			System.out.println(convetReplace2);
			//troca todas as letras ( ar ) por ( ?! )
	}

}
