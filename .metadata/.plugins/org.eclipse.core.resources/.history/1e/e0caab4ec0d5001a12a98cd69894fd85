package aplication;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int medida_1_T1, medida_2_T1, medida_3_T1,medida_1_T2, medida_2_T2, medida_3_T2;
		
		System.out.println("Digite as medidas do primeiro trinagulo");
		medida_1_T1 = sc.nextDouble();
		medida_2_T1 = sc.nextDouble();
		medida_3_T1 = sc.nextDouble();
		
		System.out.println("Digite as medidas do segundo trinagulo");
		medida_1_T2 = sc.nextDouble();
		medida_2_T2 = sc.nextDouble();
		medida_3_T2 = sc.nextDouble();
		
		double triangulo_1 = area(medida_1_T1, medida_2_T1, medida_3_T1);
		double triangulo_2 = area(medida_1_T2, medida_2_T2, medida_3_T2);
		
		sc.close();
	}
	
	public static double area(int a, int b, int c) {
		double aux = (a + b + c) / 2.0;
		
		double result = Math.sqrt(aux * (aux - a) * (aux - b) * (aux - c));
		
		return result;
	}

}
