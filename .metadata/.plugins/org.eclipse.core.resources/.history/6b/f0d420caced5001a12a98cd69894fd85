package aplication;

import java.util.Locale;
import java.util.Scanner;

import entidades.triangulo;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		double result;
		triangulo trian1, trian2;
		
		trian1 = new triangulo();
		trian2 = new triangulo();
		
		System.out.println("Digite as medidas do primeiro trinagulo");
		medida_1_T1 = sc.nextDouble();
		medida_2_T1 = sc.nextDouble();
		medida_3_T1 = sc.nextDouble();
		
		System.out.println("Digite as medidas do segundo trinagulo");
		medida_1_T2 = sc.nextDouble();
		medida_2_T2 = sc.nextDouble();
		medida_3_T2 = sc.nextDouble();
		
		double triangulo_1 = area(medida_1_T1, medida_2_T1, medida_3_T1);
		System.out.printf("A area do primeiro triangulo: %.4f%n", triangulo_1);
		
		double triangulo_2 = area(medida_1_T2, medida_2_T2, medida_3_T2);
		System.out.printf("A area do segundo triangulo: %.4f%n", triangulo_2);
		
		if (triangulo_1 > triangulo_2) {
			System.out.println("O orimeiro triangulo e maior !");
		}
		else {
			System.out.println("O segundo triangulo e maior !");
		}
		
		sc.close();
	}
	
	public static double area(double a, double b, double c) {
		double aux = (a + b + c) / 2.0;
		
		double result = Math.sqrt(aux * (aux - a) * (aux - b) * (aux - c));
		
		return result;
	}

}
